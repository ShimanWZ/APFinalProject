<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane onMouseMoved="#load" prefHeight="500.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainPageController">
   <children>
      <TextField fx:id="searchbar" layoutX="22.0" layoutY="20.0" prefHeight="26.0" prefWidth="234.0" promptText="search users..." />
      <Button layoutX="2.0" layoutY="403.0" mnemonicParsing="false" onAction="#play" prefHeight="96.0" prefWidth="96.0" text="play" />
      <Button layoutX="99.0" layoutY="403.0" mnemonicParsing="false" onAction="#chat" prefHeight="96.0" prefWidth="96.0" text="chat" />
      <HBox layoutY="94.0" prefHeight="306.0" prefWidth="350.0">
         <children>
            <ListView fx:id="contactList" onMouseClicked="#chooseContact" prefHeight="310.0" prefWidth="331.0" />
            <ScrollBar orientation="VERTICAL" prefHeight="339.0" prefWidth="18.0" />
         </children>
      </HBox>
      <Button layoutX="292.0" layoutY="20.0" mnemonicParsing="false" onAction="#search" text="search" />
      <Label layoutX="22.0" layoutY="68.0" text="contacts" />
      <Button layoutX="292.0" layoutY="473.0" mnemonicParsing="false" onAction="#logout" text="logout" />
      <Button layoutX="243.0" layoutY="64.0" mnemonicParsing="false" onAction="#addContact" text="add to contacts" />
      <Button layoutX="265.0" layoutY="20.0" mnemonicParsing="false" onAction="#exitSearchMode" prefHeight="18.0" prefWidth="22.0" text="x" />
   </children>
</AnchorPane>
